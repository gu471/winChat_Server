import socket
import sys
from thread import start_new_thread
import chatClasses
import time

listenerPort = 5006
promoterPort = 5005
server_address = "127.0.0.1"

def connectSocket(_type, server_address, port):
	# Create a TCP/IP socket
	sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)    
	# Connect to server
	try:
		sock.connect(server_address, port)
		log("starting up on %s port %s _ " % sock.getsockname() + _type)
	except socket.error, msg:
		log(_type + " : Connect Failed. Error Code: {} Error: {}".format(str(msg[0]), msg[1]))
		sys.exit()

	return sock

def startListener(address, port):
	sock = connectSocket("listener", port)

def startListener(address, port):
	sock = connectSocket("promoter", port)
	while True:
		size = sock.recv(1024)



def main():
    startListener